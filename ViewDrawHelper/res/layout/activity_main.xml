    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#ff0000"
        android:gravity="center"
        android:text="I can be dragged !" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_qulified"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dr_quilfied_btn"
            android:text="合格"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_no_ulified"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dr_unquilfied_btn"
            android:text="不合格"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </LinearLayout>
<!-- </com.example.viewdrawhelper.DrawLayout> -->
